<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.apache.inlong.manager.dao.mapper.DataProxyPulsarMapper">
    <select id="selectMapping" parameterMap="java.lang.String" resultType="org.apache.inlong.manager.dao.entity.ProxyPulsarMapEntity">
        select id,proxy_cluster_name,pulsar_set_name,inlong_group_id,pulsar_tenant
        from proxy_pulsar_map
        where proxy_cluster_name=#{proxyClusterName,jdbcType=VARCHAR}
    </select>
    <select id="selectPulsarCluster" parameterMap="java.lang.String" resultType="org.apache.inlong.manager.dao.entity.PulsarClusterEntity">
        select id,pulsar_cluster_name,set_name
        from pulsar_cluster
        where set_name=#{pulsarSetName,jdbcType=VARCHAR}
    </select>
    <select id="selectPulsarConfig" parameterMap="java.lang.String" resultType="org.apache.inlong.manager.dao.entity.PulsarConfigEntity">
        select id,proxy_cluster_name,key_name,key_value
        from pulsar_config
        where proxy_cluster_name=#{pulsarClusterName,jdbcType=VARCHAR}
    </select>

</mapper>
