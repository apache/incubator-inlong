# compile protobuf
FROM gcc:12.1.0 as protobuf
RUN rm -rf /var/lib/apt/lists/
ARG PROTOBUF_VERSION=2.6.0
RUN curl -LOk "https://github.com/protocolbuffers/protobuf/releases/download/v${PROTOBUF_VERSION}/protobuf-${PROTOBUF_VERSION}.tar.gz" \
    && tar -zxvf "protobuf-${PROTOBUF_VERSION}.tar.gz" -C "/opt/"
RUN wget --no-check-certificate "https://mirrors.tuna.tsinghua.edu.cn/armbian-releases/_toolchain/gcc-linaro-6.4.1-2017.11-x86_64_aarch64-linux-gnu.tar.xz" \
    && xz -d "gcc-linaro-6.4.1-2017.11-x86_64_aarch64-linux-gnu.tar.xz" \
    && mkdir /usr/local/toolchain/ \
    && tar -xvf "gcc-linaro-6.4.1-2017.11-x86_64_aarch64-linux-gnu.tar" -C "/usr/local/toolchain/"
ENV PATH="$PATH:/usr/local/toolchain/gcc-linaro-6.4.1-2017.11-x86_64_aarch64-linux-gnu/bin/"
RUN echo "export PATH=$PATH" > /etc/environment
RUN cd /opt/protobuf-${PROTOBUF_VERSION} \
    && ./configure --host=arm-linux CC=aarch64-linux-gnu-gcc CXX=aarch64-linux-gnu-g++ --prefix=/usr \
    && make && make DESTDIR=/protobuf/ install \
    && rm -f "protobuf-${PROTOBUF_VERSION}.tar.gz"
# for building tubemq
FROM maven:3-openjdk-8
WORKDIR /tubemq/
COPY --from=protobuf /protobuf/usr/bin/* /usr/bin/
COPY --from=protobuf /protobuf/usr/include/* /usr/include/
COPY --from=protobuf /protobuf/usr/lib/* /usr/lib/
# ADD settings.xml /root/.m2/
# mvn command
ENTRYPOINT ["/usr/bin/mvn"]
